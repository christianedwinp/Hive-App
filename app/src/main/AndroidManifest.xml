<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="christianedwinp.hive_ver10">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:label="@string/app_name"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity android:name=".Activity_Welcomepage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity_Signup"
            android:label="Sign up"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity android:name=".Activity_Main"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity android:name=".Activity_Shot_cam"
            android:parentActivityName=".Activity_Main">
        </activity>
        <activity android:name=".Activity_gallery_ver2"
            android:parentActivityName=".Activity_Main">
        </activity>

    </application>

</manifest>