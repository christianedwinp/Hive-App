<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:id="@+id/dronecam_tab"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Shot_cam"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager android:id="@+id/camera_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"/>

    <android.support.design.widget.TabLayout android:id="@+id/camera_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/camera_tab_bg"
        android:layout_alignParentBottom="true"
        app:tabIndicatorHeight="4dp" />

</RelativeLayout>

</android.support.design.widget.CoordinatorLayout>