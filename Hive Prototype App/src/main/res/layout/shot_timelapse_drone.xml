<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Camera data-->
    <FrameLayout android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <!--light button-->
    <ImageButton android:id="@+id/lightsetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="62dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ic_flash_auto_white_24dp"
        android:padding="20dp"
        android:onClick="light"/>

    <!--middle taking picture button-->
    <ImageButton android:id="@+id/takepic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="62dp"
        android:src="@drawable/camera_button"
        android:layout_centerHorizontal="true"
        android:onClick="cheese"/>


</RelativeLayout>
